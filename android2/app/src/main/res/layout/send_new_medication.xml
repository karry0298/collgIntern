<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabbedChoice$PlaceholderFragment">

    <TextView
        android:id="@+id/morngContent"
        android:layout_width="393dp"
        android:layout_height="113dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/morngTitle"
        android:onClick="morngClick"
        android:text="davhbsjvbjsdncdncdnc" />

    <TextView
        android:id="@+id/afternoonTitle"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/morngContent"
        android:layout_below="@+id/morngContent"
        android:text="Afternoon:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/afternoonContent"
        android:layout_width="393dp"
        android:layout_height="113dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/afternoonTitle"
        android:onClick="noonClick"
        android:text="hjvffhsjdjdbvjkbcvcxvncvn" />

    <TextView
        android:id="@+id/evenContent"
        android:layout_width="393dp"
        android:layout_height="113dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/evenTitle"
        android:onClick="eveninClick"
        android:text="adkvbsdjvbjksdvksdvnsdvkdklcv" />

    <TextView
        android:id="@+id/morngTitle"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/afternoonTitle"
        android:layout_marginTop="12dp"
        android:text="Morning:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/evenTitle"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/morngContent"
        android:layout_below="@+id/afternoonContent"
        android:text="Evening:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/submitBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:background="@drawable/submit_button"
        android:text="Button" />

</RelativeLayout>