<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateTheMedication">

    <EditText
        android:id="@+id/morngUpdate"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/morngTitle"
        android:hint="Morning Medication" />

    <TextView
        android:id="@+id/afternoonTitle"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:text="Afternoon:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/afternoonUpdate"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/afternoonTitle"
        android:hint="Afternoon Medication" />

    <EditText
        android:id="@+id/evenUpdate"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/evenTitle"
        android:hint="Evening Medication" />

    <TextView
        android:id="@+id/morngTitle"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/afternoonTitle"
        android:layout_marginTop="12dp"
        android:text="Morning:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/evenTitle"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:text="Evening:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/submit_button"
        android:text="UPDATE" />


</RelativeLayout>